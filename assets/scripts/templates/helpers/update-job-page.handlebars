
  <form id='update-job' data-id='{{job.id}}'>
    Customer value:<br>
    <input type="text" name="job[Customer]" value="{{job.Customer}}">
  <br>
  Worker value:<br>
  <input type="text" name="job[Worker]" value="{{job.Worker}}">
  <br>
  Price:<br>
  <input type="text" name="job[Price]" value="{{job.Price}}" pattern="^\$\d{1,3}(,\d{3})*(\.\d+)?$" data-type="currency">
  <br>
  Address:<br>
  <input type="string" name="job[Address]" value="{{job.Address}}">
  <br>
  Date:<br>
  <input type="date" name="job[Date]" value="{{job.Date}}">
  <br>
  Time:<br>
  <input type="time" name="job[Time]" value="{{job.Time}}">
  <br>
  Status:<br>
  <select name="job[status]" value="{{job.status}}" size="3">
    <option value="Open">Open</option>
    <option value="Closed">Closed</option>
    <option value="In-Progress">In-Progress</option>
  </select>
  <br>
  <input id="update-button" type="submit" value="Update Job">
</form>
