// handlebar necessary to display a jobs information in a nice format as well as adding an edit and Delete button next to it

   {{#each jobs as |job|}}
     <tr>
       <th>{{job.Customer}}</th>
       <th>{{job.Worker}}</th>
       <th>{{job.Price}}</th>
       <th>{{job.Address}}</th>
       <th>{{job.Date}}</th>
       <th>{{job.Time}}</th>
       <th>{{job.status}}</th>
       <th><button  data-id='{{job.id}}' id="edit-button">Edit</button> </th>
       <th><button data-id='{{job.id}}' id="delete-button">Delete</button></tr>
     </tr>
   {{/each}}
